<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepActivity">

    <!-- Cerchio 1 -->
    <ImageView
        android:id="@+id/circle1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_background"
        android:src="@mipmap/ic_circle_empty"
        android:contentDescription="@string/circle1"/>

    <!-- Cerchio 2 -->
    <ImageView
        android:id="@+id/circle2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_background"
        android:src="@mipmap/ic_circle_empty"
        android:contentDescription="@string/circle2"/>

    <!-- Cerchio 3 -->
    <ImageView
        android:id="@+id/circle3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circle_background"
        android:src="@mipmap/ic_circle_empty"
        android:contentDescription="@string/circle3"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avanti"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/circle1"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
